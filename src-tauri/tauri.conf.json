{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "drawplz",
  "version": "0.1.0",
  "identifier": "com.od23.drawplz",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "林间玉阙 - 你画我猜工具",
        "width": 800,
        "height": 600
      },
      {
        "label": "image-overlay",
        "title": "图片展示",
        "url": "image-overlay.html",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": true,
        "center": true,
        "visible": false,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
